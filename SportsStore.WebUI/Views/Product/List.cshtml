@model SportsStore.WebUI.Models.ProductsListViewModel


@{
    ViewBag.Title = "List";
}

<h2>List</h2>

@foreach (var p in Model.Products)
{
    <h3>@p.Name</h3>
    @p.Description
    <h4>@p.Price</h4>
}

<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>